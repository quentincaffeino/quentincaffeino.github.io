    "@sveltejs/kit": "2.0.6",
    "@vitest/coverage-istanbul": "1.2.0",
    "autoprefixer": "10.4.16",
    "dotenv": "16.3.1",
    "graphql": "16.8.1",
    "happy-dom": "13.0.0",
    "html-minifier-terser": "7.2.0",
    "lodash.merge": "4.6.2",
    "npm-run-all": "4.1.5",
