    "test": "pnpm test:unit && pnpm test:ct && pnpm test:e2e",
    "ci:test": "vitest run --coverage && pnpm test:ct && pnpm test:e2e",
    "ci:build": "pnpm build"
  },
  "devDependencies": {
    "@playwright/experimental-ct-svelte": "1.40.1",
